<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

  <div class="row">
    <div class="col-sm-4">
      </div>

      <div class="col-sm-8">
     

    <% if current_user %></p>
      <%= form_for [@product, Review.new] do |form| %>

          <div class="form-group">
            <%= form.label :rating %>
            <%= form.number_field :rating, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :description %>
            <%= form.text_area :description, class: 'form-control' %>
          </div>
          <%= form.submit 'Submit', class: 'btn btn-primary' %>

        <% end %>      
    <% end %> 
    </div>
  </div>    
        
    <div class="row">
      <div class="col-sm-4">
      </div>

      <div class="col-sm-8">
          <h3>Reviews</h3>   
          <ul>
            <% @reviews.reverse.each do |review| %>
              <li>
                <div>
                  <h4>Review by <%= get_user(review.user_id)[0].first_name %><h4>
                  <% if current_user %>
                    <% if current_user.id == review.user_id %>
                      <%= link_to "Delete", review_path(:id => review.id, :product_id => @product.id), :confirm => "Are you sure?", :method => :delete %>
                    <% end %>
                  <% end %>
                  <p><small><%= review.created_at %></small></p>
                  <p>Rating: <%= review.rating %>/5</p>
                  <p>Description: <%=review.description %></p>
                <div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

  </article>

</section>
